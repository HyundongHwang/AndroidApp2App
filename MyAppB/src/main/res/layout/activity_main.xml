<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_send_msg_by_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send msg by activity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_send_msg_by_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send msg by service"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_send_msg_by_messenger_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send msg by messenger service"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear log"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>